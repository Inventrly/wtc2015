{
    "manifest_version": 2,
	"name" : "PLTLabs Bluetooth API Demo",
	"description" : "Demonstration of the Google Chrome APP Bluetooth APIs",
	"version" : "1.0",
	"icons": { "128": "pltlabs.png" },
	"app": {
		"background" : {
			"scripts": ["background.js"]
		}
	},
	"bluetooth":{
	    "uuids": ["1101"],
            "socket" : true
	},
	"permissions" : ["http://*/","https://*/","audioCapture"]

}

